@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="ctx">
        <RouteView RouteData="@ctx" DefaultLayout="@typeof(OpenAIChat.Shared.MainLayout)" />
        <FocusOnNavigate RouteData="@ctx" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(OpenAIChat.Shared.MainLayout)">
            <h1>Page not found</h1>
        </LayoutView>
    </NotFound>
</Router>
